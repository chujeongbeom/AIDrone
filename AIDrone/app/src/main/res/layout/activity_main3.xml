<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".Main3Activity"
    android:background="@drawable/controller">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            style="@android:style/Widget.Holo.Light.Button.Toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:onClick="main"
            android:text="AI" />

        <Button
            android:id="@+id/button2"
            style="@android:style/Widget.Holo.Light.Button.Toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:onClick="intent"
            android:text="Guide" />

        <Button
            android:id="@+id/button3"
            style="@android:style/Widget.Holo.Light.Button.Toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:text="Controller"/>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="10"
        android:columnCount="9">

        <ImageButton
            android:id="@+id/takeoff"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:onClick="takeoff"
            app:srcCompat="@drawable/takeoff" />

        <ImageButton
            android:id="@+id/landing"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="8"
            android:layout_row="0"
            android:onClick="landing"
            app:srcCompat="@drawable/landing2" />

        <ImageButton
            android:id="@+id/forward"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:onClick="forward"
            android:layout_column="1"
            android:layout_row="5"
            app:srcCompat="@drawable/forward" />

        <ImageButton
            android:id="@+id/left"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="left"
            android:layout_row="6"
            android:layout_column="0"
            app:srcCompat="@drawable/left" />

        <ImageButton
            android:id="@+id/back"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:onClick="back"
            app:srcCompat="@drawable/back" />

        <ImageButton
            android:id="@+id/right"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="right"
            android:layout_row="6"
            android:layout_column="2"
            app:srcCompat="@drawable/right" />

        <ImageButton
            android:id="@+id/up"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="up"
            android:layout_row="4"
            android:layout_column="8"
            android:layout_rowSpan="2"
            app:srcCompat="@drawable/up" />

        <ImageButton
            android:id="@+id/down"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="down"
            android:layout_row="7"
            android:layout_column="8"
            android:layout_rowSpan="2"
            app:srcCompat="@drawable/down" />

        <ImageButton
            android:id="@+id/cw"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="88dp"
            android:layout_height="55dp"
            android:layout_column="0"
            android:layout_row="3"
            android:onClick="cw"
            app:srcCompat="@drawable/cw" />

        <ImageButton
            android:id="@+id/ccw"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="88dp"
            android:layout_height="54dp"
            android:layout_row="3"
            android:layout_column="8"
            android:onClick="ccw"
            app:srcCompat="@drawable/ccw" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="5"
            android:layout_columnSpan="2"
            android:layout_rowSpan="3"
            android:text="DJi tello"
            android:textSize="50dp"
            android:textColor="#ffffff"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="6"
            android:layout_rowSpan="3"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:text="AI Drone"
            />

    </GridLayout>
</LinearLayout>
